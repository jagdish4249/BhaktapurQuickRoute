<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fontFamily="sans-serif"
    >





<RelativeLayout
    android:id="@+id/address_item_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:paddingBottom="0dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">



    <TextView
        android:id="@+id/address_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_marginStart="93dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/my_primary_text"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/address_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/address_id"
        android:textColor="@color/my_secondary_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/address_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/my_maps_item_flag"
        android:paddingRight="8dp"
        android:textColor="@color/my_secondary_text"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:background="@color/my_divider" />
</RelativeLayout>

</android.support.constraint.RelativeLayout>